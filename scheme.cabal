name:                scheme
version:             0.1
synopsis:            Write You a Scheme
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     
    Repl
    Parser
    LispVal
    Eval
    Cli
    Prim

  default-extensions:
    OverloadedStrings

  build-depends:       
    base                 >= 4.8  && < 5.0,
    containers           >= 0.5  && < 0.6,
    directory            >= 1.3  && <= 1.4,
    haskeline            >= 0.7  && < 0.8,
    mtl                  >= 2.2  && < 2.3,
    optparse-applicative >= 0.13 && <= 1.4,
    parsec               >= 3.1  && < 3.2,
    text                 >= 1.2  && < 1.3,
    transformers         >= 0.4  && < 0.6,
    HTTP                 -any

-- directory            >= 1.2  && <1.3
-- optparse-applicative >= 0.12 && <0.13

  ghc-options:
    -Werror
    -fno-warn-unused-do-bind
    -fno-warn-unused-binds
    -fno-warn-type-defaults
    -fno-warn-type-defaults
    -fno-warn-name-shadowing

    -fwarn-duplicate-exports
    -fwarn-dodgy-exports
    -fwarn-dodgy-imports
    -fwarn-incomplete-patterns
    -fwarn-incomplete-record-updates
    -fwarn-missing-fields
    -fwarn-missing-methods
    -fwarn-orphans
    -fwarn-overlapping-patterns
    -fwarn-unused-imports
    -fwarn-tabs
    -fwarn-unrecognised-pragmas
 
  hs-source-dirs: src
  default-language: Haskell2010

executable scheme
  main-is: Main.hs
  build-depends: 
    base >= 4.8 && < 5,
    scheme == 0.1
  hs-source-dirs: exec
  default-language: Haskell2010

executable docs
  main-is: Build.hs
  build-depends:       
    base     >= 4.8 && < 5.0,
    shake    >= 0.15 && <0.16,
    pandoc   >= 1.15 && <1.20
  default-language: Haskell2010

test-Suite test
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs: test-hs
  default-language: Haskell2010
  build-depends:
    base     >= 4.8 && < 5.0,
    text     >= 1.2 && < 1.3,
    hspec    >= 2.4 && < 2.5,
    scheme == 0.1

-- hspec        >= 2.2 && < 2.3,

test-Suite test-golden
  type: exitcode-stdio-1.0
  main-is: Golden.hs
  hs-source-dirs: test-hs
  default-language: Haskell2010
  build-depends:
    base         >= 4.8    && < 5.0,
    text         >= 1.2    && < 1.3,
    tasty        >= 0.11   && < 0.12,
    tasty-golden >= 2.3    && < 2.5,
    bytestring   >= 0.10.8 && < 0.11,
    scheme == 0.1
